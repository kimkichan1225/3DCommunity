# ========================================
# Supabase PostgreSQL Database Settings
# ========================================
# Supabase Dashboard에서 확인:
# 1. https://supabase.com 로그인
# 2. 프로젝트 선택
# 3. Settings → Database 메뉴
# 4. Connection Info 섹션에서 아래 정보 복사

# Database URL (JDBC 형식) - Transaction Pooler 사용
DB_URL=jdbc:postgresql://aws-1-ap-south-1.pooler.supabase.com:6543/postgres?sslmode=require&prepareThreshold=0

# Database Username (Pooler는 프로젝트ID 포함)
DB_USERNAME=postgres.krnevmhwahnxiqvyrjeu

# Database Password (Supabase 비밀번호 입력!)
DB_PASSWORD="!Q@W#E$R!"

# ========================================
# JPA / Hibernate Settings
# ========================================
# update: 자동으로 테이블 생성/수정 (개발 중 권장)
# validate: 테이블 검증만 (배포 시 권장)
# create: 매번 테이블 재생성 (주의!)
DB_DDL_AUTO=update

# SQL 쿼리 로그 출력 여부
DB_SHOW_SQL=true

# ========================================
# CORS Settings
# ========================================
# 프론트엔드 URL (쉼표로 여러 개 가능)
# 예: http://localhost:3000,https://your-app.netlify.app
CORS_ORIGINS=http://localhost:3000

# ========================================
# Server Settings
# ========================================
SERVER_PORT=8080

# ========================================
# JWT (JSON Web Token) Settings
# ========================================
# JWT 비밀키 (최소 256비트 권장)
# 아래 방법 중 하나로 생성:
# 1. https://generate-secret.vercel.app/64
# 2. node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# 3. 직접 작성: 최소 32자 이상의 랜덤 문자열
JWT_SECRET=PLEASE_CHANGE_THIS_TO_A_SECURE_RANDOM_KEY_MIN_256_BITS

# JWT 토큰 만료 시간 (밀리초)
# 86400000 = 24시간
# 3600000 = 1시간
JWT_EXPIRATION=86400000

# ========================================
# Logging Settings
# ========================================
# DEBUG: 상세 로그 (개발 중)
# INFO: 일반 로그 (운영)
# ERROR: 에러만 (운영)
LOG_LEVEL=DEBUG
